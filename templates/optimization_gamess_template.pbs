#!/bin/sh

#PBS -l select=1:ncpus={{ NCPUS }}:mem={{ MEM }}:scratch_local={{ SCRATCH_LOCAL }}
#PBS -l walltime={{ WALLTIME }}
#PBS -N {{ MOLNAME }}
#PBS -M {{ USER_EMAIL }}
#PBS -j oe
