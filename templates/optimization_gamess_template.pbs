molname=$PBS_JOBNAME

export OMP_NUM_THREADS=1
module load gamess-sept2018

cp -r $PBS_O_WORKDIR/$molname.inp $SCRATCHDIR 

cd $SCRATCHDIR 

rungms $molname.inp 00 $((PBS_NCPUS/2)) $PBS_NCPUS >$molname.log >&1 $molname.err

cp -r $SCRATCHDIR/$molname.log $PBS_O_WORKDIR/
